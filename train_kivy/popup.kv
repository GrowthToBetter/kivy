#:kivy 2.2.1
<Popup>:
    auto_dismiss:True #jika dibuat true maka bisa close tanpa tombol

<main>:
    BoxLayout:
        orientation:'horizontal'
        size: root.height,root.height
        padding:10
        FloatLayout:
            BoxLayout:
                orientation:'vertical'
                size: root.height,root.height
                padding:10
                spacing:10
                pos_hint:{'center_x':0.5,'center_y':0.5}
                Label:
                    text:'click me'
                    font_size:20
                Button:
                    text:'*'
                    on_press: root.open()

<pop>:
    size_hint: 0.6,0.4
    pos_hint:{'center_x':0.5,'center_y':0.5}
    title: 'popup'
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        padding:10
        spacing:10
        Label:
            text:'tes'
        Label:
            text:'tes2'
               

