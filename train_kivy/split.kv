#:kivy 2.2.1
<main>:
    BoxLayout:
        id:wrap
        orientation:'horizontal'
        size: root.width, root.height
        FloatLayout:
            id:wrapper
            Button:
                id:buton
                text:'press to split'
                size_hint: 0.5,0.2
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                on_release: root.press(chooser.selection)
            BoxLayout:
                orientation:'vertical'
                size_hint:0.6,0.3
                pos_hint:{'center_x':0.5, 'center_y':0.3}
                FileChooserIconView:
                    id:chooser
