#:kivy 2.1.0

<main>:
    FloatLayout:
        Button:
            text:'submit'
            id:submit
            on_release: root.submit()
            # size_hint: 0.2,0.01
            size_hint_x:None
            size_hint_y:None
            width:100
            height:25
            pos_hint: {'x':0.2,'y':0.25}
        GridLayout:
            rows:2
            size_hint: 0.4,0.1
            pos_hint: {'x':0.2,'y':0.3}
            Label:
                id:ask
                text:'who are you?'
            TextInput:
                multiline: False
                id:input