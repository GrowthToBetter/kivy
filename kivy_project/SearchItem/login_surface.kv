#:kivy 2.2.1
MDScreen:
    name:'surface'
    MDCard:
        size_hint:None,None
        size: root.width,root.height
        pos_hint:{'center_x':0.5,'center_y':0.5}
        elevation:10
        padding:5
        spacing:10
        orientation:'vertical'
        md_bg_color: app.theme_cls.primary_dark
        FloatLayout:
            size:root.width,root.height
            Image:
                source:app.resource_path('picture/2.png')
                fit_mode:'contain'
                opacity:0.5
                size_hint:1,1
                pos_hint:{'center_x':0.5,'center_y':0.5}
            Label:
                text:'L a n g u a g e  :  E n'
                size_hint:0.085,0.085
                pos_hint:{'x':0.5,'center_y':.95}
            MDLabel:
                id:welcome
                text:'W E L C O M E'
                font_size: 20
                halign:'center'
                pos_hint:{'center_x':0.5,'center_y':.05}
            MDRoundFlatButton:
                text:'L O G I N'
                color:(1,1,1,1)
                line_color:(1,1,1,1)
                bold:True
                font_size:'30sp'
                size_hint: 0.5,0.1
                pos_hint: {'center_x':0.5,'center_y':0.18}
                on_release: 
                    root.manager.transition.direction='left'
                    root.manager.current='signup'

            