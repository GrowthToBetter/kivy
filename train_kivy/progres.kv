#:kivy 2.2.1
<main>:
    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height
        
        ProgressBar:
            id:progress
            value:0
            min:1
            max:100
            Label:
                id:say
                text: f'{self.parent.value} %'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_hint: 1,1
                color:(1,1,1,1)
        Button:
            text:''
            on_press:root.progress()