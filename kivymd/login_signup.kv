#:kivy 2.2.1
MDScreen:
    name:'signup'
    MDCard:
        size_hint:None,None
        size: 400,600
        pos_hint:{'center_x':0.5,'center_y':0.5}
        elevation:10
        padding:5
        spacing:10
        orientation:'vertical'
        md_bg_color: app.theme_cls.primary_dark
        FloatLayout:
            size:root.width,root.height
            Image:
                source: 'picture/3.png'
                opacity:0.7
            MDIconButton:
                icon:'arrow-left'
                pos_hint:{'center_x':0.08,'center_y':0.95}
                on_release:
                    root.manager.transition.direction='right'
                    root.manager.current='surface'
            MDLabel:
                id:signup
                text:'S I G N  U P'
                font_size: 20
                pos_hint:{'center_x':0.5,'center_y':.7}
                halign:'center'
            MDLabel:
                text:'SignUp to continue the  procces... '
                font_size: 12
                pos_hint:{'center_x':0.5,'center_y':.65}
                halign:'center'
            MDTextFieldRound:
                id:user
                color_active:(240,240,1,1)
                normal_color:(0,0,0,0)
                opacity:1
                icon_right: 'account'
                icon_color:'Dark'
                hint_text:'UserName'
                size_hint:None,None
                width:250
                height:100
                pos_hint:{'center_x':0.5,'center_y':0.3}
            MDTextFieldRound:
                id:password
                color_active:(240,240,1,1)
                normal_color:(0,0,0,0)
                opacity:1
                icon_right:'eye-off'
                icon_color:'Dark'
                hint_text:'Password'
                size_hint:None,None
                width:250
                height:100
                pos_hint:{'center_x':0.5,'center_y':0.249}
                password:True
            MDRoundFlatButton:
                text:' S I G N  U P'
                theme_text_color: "Custom"
                color:(1,1,1,1)
                bold:True
                font_size:'30sp'
                size_hint: 0.5,0.1
                pos_hint: {'center_x':0.5,'center_y':0.1}
                on_release: app.signup()
            MDLabel:
                id:alert
                text:'P L E A S E  S I G N  U P'
                theme_text_color: "Custom"
                text_color:(1,0,0,1)
                size_hint_y:None
                height: 15
                halign:'center'
                opacity:0