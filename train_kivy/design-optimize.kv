#:kivy 2.1.0

<main>:
    FloatLayout:
        GridLayout:
            rows: 2
            cols: 3
            row_force_default: True
            col_force_default: True
            row_default_height: 150
            col_default_width: 300
            pos_hint: {'x':0.3, 'y':-0.3}
            id: wrap
            name:input_name
            hobby:input_hobby
            profesi:input_profesi
            GridLayout:
                rows: 3
                Label:
                    id:name
                    text:'name'
                TextInput:
                    id: input_name
                    multiline: False
                Label:
                    id:hobby
                    text:'hobby'
                TextInput:
                    id: input_hobby
                    multiline: False
                Label:
                    id:profesi
                    text:'profesi'
                TextInput:
                    id: input_profesi
                    multiline: False
        FloatLayout:
            Button:
                text:'submit'
                on_release: root.press()
                size_hint_x:None
                size_hint_y:None
                width: 150
                height: 50
                pos_hint: {'x':0.4, 'y':0.35}