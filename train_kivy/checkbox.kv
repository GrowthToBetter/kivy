#:kivy 2.2.1

<main>:
    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height
        FloatLayout:
            id:tes
            Image:
                id:picture
                source:'C:/Users/ASUS/Downloads/images (1).jpeg'
                fit_mode:'contain'
                opacity:0.4
            Label:
                text:'2D OR 3D'
                font_size: 40
                color:(1,1,1,1)
                bold:True
                pos_hint:{'center_x':0.5,'y':0.3}
            GridLayout:
                cols:2
                pos_hint:{'center_x':0.5,'center_y':0.5}
                size_hint:0.5,0.3
                Label:
                    text:'2D'
                    font_size:20
                CheckBox:
                    on_active: root.press(1, self.active)
                    group: 'wallpaper'
                Label:
                    text:'3D'
                    font_size:20
                CheckBox:
                    group: 'wallpaper'
                    on_active: root.press(2, self.active)

