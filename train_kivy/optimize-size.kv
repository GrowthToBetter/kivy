#:kivy 2.1.0

<main>:
    FloatLayout:
        Button:
            text:'submit'
            id:submit
            on_release: root.submit()
            # size_hint: 0.2,0.01
            size_hint_x:None
            size_hint_y:None
            width:150
            height:25
            pos_hint: {'x':0.4,'y':0.5}
        GridLayout:
            rows:2
            row_force_default: True
            col_force_default: True
            row_default_height: 30
            col_default_width: 300
            pos_hint: {'x':0.3,'y':-0.3}
            Label:
                id:ask
                text:'who are you?'
            TextInput:
                multiline: False
                id:input