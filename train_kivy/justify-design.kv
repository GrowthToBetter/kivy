#:kivy 2.1.0
<Button>:
    pos_hint:{'center_x':0.5,'center_y':0.5}
    size_hint:0.4,0.2
    background_color:(130/225,240/255,0,1)
<label>:
    font_size:25
    bold:True
    italic:True
    outline_color:(0,0,0)
    outline_width:5
    color:(1,144/255,10/255,1)
<main>:
    BoxLayout:
        orientation:'vertical'
        padding:10
        spacing:10
        size: root.width,root.height
        FloatLayout:
            id:warp
            canvas.before:
                Color:
                    rgba:(0,240/225,180/225,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                cols:1
                size_hint:0.6,0.2
                pos_hint:{'center_x':0.5,'y':0.5}
                GridLayout:
                    cols:2
                    size_hint:0.8,0.3
                    Label:
                        text:'input user'
                        canvas.before:
                            Color:
                                rgba:(200/255,240/255,1,1)
                            Rectangle:
                                size:self.size
                                pos: self.pos
                    TextInput:
                        id:name
                        multiline:False
                        background_color: (200/255,240/255,1,1)
                Button:
                    text:'submit'
                    on_press: root.press()
                    bold:False
                    outline_width:0
                Button:
                    text:'next'
                    on_press: root.next()
                    size_hint:0.3,0.3
                    bold:False
                    outline_width:0
            Button:
                text:'reset'
                size_hint:0.1,0.1
                on_press: root.reset()
                pos_hint:{'x':0,'y':0}
                bold:False
                outline_width:0
<play>:
    BoxLayout:
        orientation:'horizontal'
        size:root.width, root.height
        FloatLayout:
            id:wrap
            canvas.before:
                Color:
                    rgba: (200/255,240/255,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id:Box
                size_hint:0.1,0.1
                pos_hint:{'x':0,'y':0}
                text:''
                canvas.before:
                    Color:
                        rgba:(1,0,0,1)
                    Rectangle: 
                        size: self.size
                        pos: self.pos
            Button:
                text:'/'
                id:m_right
                on_press:root.previous()
                pos_hint:{'x':0.9,'y':0.9}
                size_hint:0.1,0.1
                background_color: (0,0,0,0)
                color:(0,0,1,1)
            Image: 
                source:'picture/bg.jpg'
                keep_ratio: True
                allow_stretch: True    
            Button:
                text:'>'
                id:m_right
                font_size:60
                on_press:root.next()
                color:(0,0,1,1)
                pos_hint:{'center_x':0.5,'center_y':0.5}
                size_hint:0.1,0.1
                background_color: (0,0,0,0)

<win>:
    BoxLayout:
        orientation:'horizontal'
        size:root.width, root.height
        FloatLayout:
            id:wrapper
            canvas.before:
                Color:
                    rgba: (200/255,240/255,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text:'THANKS FOR PLAYING'
                pos_hint:{'center_x':0.5,'center_y':0.5}
                canvas.before:
                    Color:
                        rgba:(250/255,190/255,1,1)
                    Rectangle: 
                        size: self.size
                        pos: self.pos
            Button:
                text:'/'
                id:m_right
                on_press:root.previous()
                pos_hint:{'x':0.9,'y':0.9}
                size_hint:0.1,0.1
                background_color:(0,0,0,0)
            Button:
                text:'>'
                font_size:60
                id:m_right
                on_press:root.next()
                pos_hint:{'center_x':0.5,'center_y':0.1}
                size_hint:0.1,0.1
                background_color:(0,0,0,0)