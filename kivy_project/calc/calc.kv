#:kivy 2.1.0

<main>:
    BoxLayout:
        orientation:'vertical'
        padding:50
        size: root.width,root.height
        FloatLayout:
            id:wrap
            Image:
                source:'bg.jpg'
                keep_ratio:True
                opacity:0.2
                pos_hint:{'center_x':0.5,'center_y':0.5}
            GridLayout:
                size_hint: 0.4,0.2
                pos_hint:{'center_x':0.5,'center_y':0.5}
                cols:1
                
                GridLayout:
                    cols:2
                    padding:0.1,0.1,0.1,0.1
                    Label:
                        text:'nama'
                        font_size:20
                        color:(0,0,180/255,1)
                        canvas.before:
                            Color:
                                rgba:(150/255,240/255,1,1)
                            Rectangle:
                                size:self.size
                                pos: self.pos
                            Color:
                                rgba:(0,0,0,1) 
                            Line:
                                width:1
                                rectangle: [*self.pos,*self.size] #to merge to element in 1 list
                                
                    TextInput:
                        multiline:False
                        background_color:(200/255,240/255,1,1)
                        id:name
                    Label:
                        text:'password'
                        font_size:20
                        color:(0,0,180/255,1)
                        canvas.before:
                            Color:
                                rgba:(150/255,240/255,1,1)
                            Rectangle:
                                size:self.size
                                pos: self.pos
                            Color:
                                rgba:(0,0,0,1) 
                            Line:
                                width:1
                                rectangle: [*self.pos,*self.size] #to merge to element in 1 list
                    TextInput:
                        multiline:False
                        background_color:(200/255,240/255,1,1)
                        id:password
                FloatLayout:
                    pos_hint: self.pos
                    Button:
                        text:'confirm'
                        size_hint:0.8,1
                        background_color:(0,0,180/255,1)
                        color:(150/255,240/255,1,1)
                        font_size:20
                        pos_hint:{'center_x':0.5,'center_y':0.25}
                        on_release: root.press()
<calc>:
    BoxLayout:
        orientation:'vertical'
        padding:10
        size: root.width, root.height
        FloatLayout:
            id:wrap_calc
            
            BoxLayout:
                orientation:'vertical'
                size:root.width ,root.height
                pos_hint:{'center_x':0.5,'center_y':0.5}
                TextInput:
                    id:show
                    multiline:False
                    halign: 'right'
                    text:'0'
                    font_size:50
                GridLayout:
                    cols:4
                    
                    Button:
                        text:'%'
                    Button:
                        text:'Ce'
                        on_press: root.clear()
                    Button:
                        text:'C'
                        on_press: root.clear()
                    Button:
                        text:'/'
                        on_press: root.divide()
                    Button:
                        text:'7'
                        on_press: root.press(7)
                    Button:
                        text:'8'
                        on_press: root.press(8)
                    Button:
                        text:'9'
                        on_press: root.press(9)
                    Button:
                        text:'x'
                        on_press: root.multiple()
                    Button:
                        text:'4'
                        on_press: root.press(4)
                    Button:
                        text:'5'
                        on_press: root.press(5)
                    Button:
                        text:'6'
                        on_press: root.press(6)
                    Button:
                        text:'-'
                        on_press: root.min()
                    Button:
                        text:'1'
                        on_press: root.press(1)
                    Button:
                        text:'2'
                        on_press: root.press(2)
                    Button:
                        text:'3'
                        on_press: root.press(3)
                    Button:
                        text:'+'
                        on_press: root.plus()
                    Button:
                        text:'+/-'
                        on_press: root.press()
                    Button:
                        text:'0'
                        on_press: root.press(0)
                    Button:
                        text:'.'
                        on_press: root.press()
                    Button:
                        text:'='
                        on_press: root.equal()
            Label:
                text:'Log in'
                pos_hint:{'center_x':0.5, 'y':0.85}
                size_hint:0.5,0.2
                font_size:20
                bold:True
                id:logged
                color:(230/255,165/255,225/255,1)
    