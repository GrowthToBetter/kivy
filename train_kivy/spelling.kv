#:kivy 2.2.1
<main>:
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        padding:10
        TextInput:
            multiline:False
            id:word
        Label:
            id:label1
            text:''
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    pos:self.pos
                    size:self.size
        Button:
            text:'press'
            on_press: root.press()
            