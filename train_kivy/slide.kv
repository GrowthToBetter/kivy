#:kivy 2.2.1
<main>:
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height
        padding:10
        spacing:20
        Label:
            id:word
            text:'slide to change font!'
            font_size:20
        Slider:
            min:1
            max:100
            step:1
            orientation:'horizontal'
            on_value: root.slide(*args)